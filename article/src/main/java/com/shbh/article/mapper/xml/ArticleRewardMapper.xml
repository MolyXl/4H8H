<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shbh.sentinel.mapper.ArticleRewardMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.shbh.sentinel.entity.ArticleReward">
        <id column="id" property="id" />
        <result column="article_id" property="articleId" />
        <result column="reward_total" property="rewardTotal" />
        <result column="settled" property="settled" />
        <result column="un_settled" property="unSettled" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, article_id, reward_total, settled, un_settled
    </sql>

</mapper>
